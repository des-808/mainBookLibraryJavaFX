<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="org.example.mainbooklibraryjavafx.MainController">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>

  <columnConstraints>
    <ColumnConstraints hgrow="ALWAYS"/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="ALWAYS"/>
    <RowConstraints vgrow="ALWAYS"/>
  </rowConstraints>

  <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER_LEFT" spacing="10">
    <Button text="Добавить"  onAction="#addBook"/>
  </HBox>

  <TableView fx:id="bookTable" GridPane.rowIndex="1" GridPane.columnIndex="0">
    <columns>
      <TableColumn fx:id="isbnColumn" text="ISBN" />
      <TableColumn fx:id="titleColumn" text="Название" />
      <TableColumn fx:id="priceColumn" text="Цена" />
      <TableColumn fx:id="pagesColumn" text="Страниц" />
      <TableColumn fx:id="authorColumn" text="Автор" />
      <TableColumn fx:id="yearColumn" text="Год" />
      <TableColumn fx:id="publisherColumn" text="Издатель" />
      <TableColumn fx:id="genreColumn" text="Жанр" />

      <TableColumn fx:id="editColumn" text="Изменение" />
      <TableColumn fx:id="deleteColumn" text="Удаление" />
    </columns>
    <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
  </TableView>
</GridPane>
